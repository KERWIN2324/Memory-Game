<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo del CardView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color de fondo -->
        </shape>
    </item>

    <!-- Borde inferior -->
    <item android:gravity="bottom"> <!-- Aplica el borde inferior -->
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Color del borde inferior -->
            <size android:height="3dp"/> <!-- Grosor del borde -->
        </shape>
    </item>

    <item android:gravity="top"> <!-- Aplica el borde inferior -->
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Color del borde inferior -->
            <size android:height="3dp"/> <!-- Grosor del borde -->
        </shape>
    </item>



</layer-list>