<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Estado presionado -->
<item android:state_pressed="true">
    <shape>
        <solid android:color="#CA73FF"/> <!-- Color de fondo al presionar -->
        <stroke
            android:width="2dp"
            android:color="#000000"/> <!-- Color del borde al presionar -->
        <corners android:radius="8dp"/> <!-- Bordes redondeados -->
        <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/> <!-- Espaciado interno -->
    </shape>
</item>
<!-- Estado por defecto -->
<item>
    <shape xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="ExtraText">
        <solid android:color="#FFFFFF"/> <!-- Color de fondo del CardView -->
        <stroke
            android:width="3dp"
            android:color="#000000"/> <!-- Color del borde -->
        <corners android:radius="0dp"/> <!-- Bordes redondeados -->
        <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/> <!-- Espaciado interno -->
    </shape>
</item>
</selector>



